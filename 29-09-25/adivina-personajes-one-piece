;;; MODO DE JUEGO CON FILTRADO DINÃMICO
;;; ============================================================================

(defparameter *preguntas-dinamicas*
  (list
   '("Â¿Es miembro de la tripulaciÃ³n del Sombrero de Paja?" :tripulacion sombrero-paja)
   '("Â¿Tiene fruta del diablo?" :fruta si)
   '("Â¿Es mujer?" :genero femenino)
   '("Â¿Es de la Marina?" :afiliacion marine)
   '("Â¿Es un Yonko o fue Yonko?" :afiliacion yonko)
   '("Â¿Usa Haki?" :haki si)
   '("Â¿Fue Shichibukai?" :ex-shichibukai si)
   '("Â¿Es de East Blue?" :origen east-blue)
   '("Â¿Su recompensa es mayor a 1 billÃ³n?" :recompensa 1000000000)
   '("Â¿Usa espadas como arma principal?" :arma espadas)
   '("Â¿Es un cyborg?" :cyborg si)
   '("Â¿Tiene cicatrices en la cara?" :cicatriz-cara si)
   '("Â¿Es hermano o relacionado con Luffy?" :hermano-luffy si)
   '("Â¿Usa gafas o gafas de sol?" :gafas-sol si)
   '("Â¿Es parte de los Revolucionarios?" :afiliacion revolucionarios)
   '("Â¿EstÃ¡ fallecido?" :fallecido si)
   '("Â¿Es de una especie no humana?" :especie reno)
   '("Â¿Fuma?" :fumador si)))

(defun jugar-modo-filtrado ()
  "Juega usando filtrado dinÃ¡mico de candidatos"
  (format t "~%~%â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—~%")
  (format t "â•‘  ğŸ´â€â˜ ï¸  ADIVINA QUIÃ‰N - ONE PIECE ğŸ´â€â˜ ï¸      â•‘~%")
  (format t "â•‘       Modo Filtrado Inteligente      â•‘~%")
  (format t "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•~%~%")
  (format t "Piensa en un personaje de One Piece...~%~%")
  
  (let ((candidatos (copy-list *personajes*))
        (preguntas-usadas nil))
    
    (loop while (and (> (length candidatos) 1)
                     (< (length preguntas-usadas) (length *preguntas-dinamicas*)))
          do
          (let* ((pregunta (find-if 
                           (lambda (p) (not (member p preguntas-usadas)))
                           *preguntas-dinamicas*))
                 (prompt (first pregunta))
                 (prop (second pregunta))
                 (val (third pregunta)))
            
            (format t "â“ ~a (si/no): " prompt)
            (force-output)
            (let ((resp (read-line)))
              (setf candidatos (filtrar-por-respuesta candidatos prop val resp))
              (push pregunta preguntas-usadas)
              (format t "   ğŸ’­ Quedan ~d candidato(s) posible(s).~%~%" 
                      (length candidatos)))))
    
    ;; Resultado final
    (cond
      ((= (length candidatos) 1)
       (let ((ganador (first candidatos)))
         (format t "~%ğŸ¯ Â¡Tu personaje es: ~a!~%" (car ganador))
         (format t "Â¿Es correcto? (si/no): ")
         (force-output)
         (if (si? (read-line))
             (format t "~%ğŸ‰ Â¡Excelente! Â¡AdivinÃ© correctamente!~%")
             (format t "~%ğŸ˜… Oh no, me equivoquÃ©. Â¡AyÃºdame a mejorar!~%"))))
      
      ((> (length candidatos) 1)
       (format t "~%ğŸ¤” No pude determinar exactamente. Posibles candidatos:~%")
       (dolist (c candidatos)
         (format t "   â­ ~a~%" (car c))))
      
      (t
       (format t "~%âŒ No encontrÃ© coincidencias. Â¿Seguro que es un personaje que conozco?~%")))))

;;; ============================================================================
;;; SISTEMA DE CONSULTAS Y ESTADÃSTICAS
;;; ============================================================================

(defun mostrar-personaje (nombre)
  "Muestra informaciÃ³n detallada de un personaje"
  (let ((personaje (find nombre *personajes* :key #'car :test #'string-equal)))
    (if personaje
        (progn
          (format t "~%â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—~%")
          (format t "â•‘  ğŸ“‹ INFORMACIÃ“N DE PERSONAJE          â•‘~%")
          (format t "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•~%")
          (format t "~%ğŸ´â€â˜ ï¸ Nombre: ~a~%" (car personaje))
          (format t "~%Propiedades:~%")
          (let ((props (cdr personaje)))
            (loop for (k v) on props by #'cddr
                  do (format t "  â€¢ ~a: ~a~%" k v))))
        (format t "~%âŒ Personaje '~a' no encontrado.~%" nombre))))

(defun listar-personajes (&optional filtro)
  "Lista todos los personajes, opcionalmente filtrados"
  (format t "~%â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—~%")
  (format t "â•‘  ğŸ“œ LISTA DE PERSONAJES               â•‘~%")
  (format t "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•~%~%")
  
  (let ((lista (if filtro
                   (remove-if-not
                    (lambda (p)
                      (member filtro (cdr p)))
                    *personajes*)
                   *personajes*)))
    
    (format t "Total: ~d personaje(s)~%~%" (length lista))
    (dolist (p lista)
      (format t "  ğŸ´â€â˜ ï¸ ~a~%" (car p)))))

(defun estadisticas ()
  "Muestra estadÃ­sticas de la base de datos"
  (format t "~%â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—~%")
  (format t "â•‘  ğŸ“Š ESTADÃSTICAS                      â•‘~%")
  (format t "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•~%~%")
  
  (let ((total (length *personajes*))
        (con-fruta 0)
        (sin-fruta 0)
        (mugiwaras 0)
        (marines 0)
        (yonkos 0)
        (mujeres 0)
        (hombres 0))
    
    (dolist (p *personajes*)
      (let ((props (cdr p)))
        (when (eq (getf props :fruta) 'si) (incf con-fruta))
        (when (eq (getf props :fruta) 'no) (incf sin-fruta))
        (when (eq (getf props :tripulacion) 'sombrero-paja) (incf mugiwaras))
        (when (eq (getf props :afiliacion) 'marine) (incf marines))
        (when (eq (getf props :afiliacion) 'yonko) (incf yonkos))
        (when (eq (getf props :genero) 'femenino) (incf mujeres))
        (when (eq (getf props :genero) 'masculino) (incf hombres))))
    
    (format t "ğŸ“ˆ Total de personajes: ~d~%" total)
    (format t "~%Por gÃ©nero:~%")
    (format t "  ğŸ‘¨ Masculino: ~d~%" hombres)
    (format t "