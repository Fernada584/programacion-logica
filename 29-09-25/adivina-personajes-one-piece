;;; ============================================================================
;;; ESTRUCTURA DE ÃRBOL DE DECISIÃ“N
;;; ============================================================================

(defstruct nodo-arbol
  "Representa un nodo en el Ã¡rbol de decisiÃ³n"
  pregunta      ; String con la pregunta
  propiedad     ; Keyword de la propiedad a verificar
  valor         ; Valor esperado para respuesta afirmativa
  si-rama       ; SubÃ¡rbol o personaje si responde SÃ
  no-rama)      ; SubÃ¡rbol o personaje si responde NO

(defun crear-nodo (pregunta propiedad valor si-rama no-rama)
  "Crea un nuevo nodo del Ã¡rbol"
  (make-nodo-arbol :pregunta pregunta
                   :propiedad propiedad
                   :valor valor
                   :si-rama si-rama
                   :no-rama no-rama))

