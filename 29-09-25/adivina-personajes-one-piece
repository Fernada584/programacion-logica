(defun limpiar (s)
  "Limpia una cadena eliminando espacios y convirtiendo a minÃºsculas."
  (string-downcase (string-trim " \t\n\r" s)))

(defun si? (s)
  "Determina si una respuesta es afirmativa."
  (let ((respuesta (limpiar s)))
    (member respuesta '("si" "sÃ­" "s" "y" "yes" "1") :test #'string=)))

